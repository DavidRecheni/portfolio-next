{
  "env": {
    "es2024": true
  },
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "ts-strict",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": 0,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "@typescript-eslint/no-misused-promises": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "public/",
    "next.config.mjs",
    "tailwind.config.js"
  ],
  "plugins": ["unused-imports"],
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": "latest"
  }
}
